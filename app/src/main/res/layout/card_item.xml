<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
       >

        <android.support.constraint.ConstraintLayout
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iw_photo"
                android:layout_width="126dp"
                android:layout_height="118dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/et_title"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_alignTop="@+id/iw_photo"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="9dp"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/tw_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iw_photo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tw_platform"
                android:layout_width="178dp"
                android:layout_height="21dp"
                android:layout_alignBottom="@+id/iw_photo"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iw_photo" />

            <TextView
                android:id="@+id/tw_price"
                android:layout_width="177dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/et_title"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@+id/tw_platform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iw_photo" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>