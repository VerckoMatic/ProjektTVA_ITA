<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_title"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Naslov"
        android:inputType="textMultiLine"
        android:maxLength="44"
        app:layout_constraintBottom_toTopOf="@+id/et_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_platforma"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="29dp"
        android:text="Platforma:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_itemType"
        app:layout_constraintEnd_toStartOf="@+id/sp_platform"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="344dp"
        android:layout_height="139dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Opis"
        android:inputType="textMultiLine"
        android:maxLength="245"
        app:layout_constraintBottom_toTopOf="@+id/sp_platform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/sp_platform"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/et_itemType"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_itemType"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:hint="Tip izdelka (npr. Å¡katle za cd-je, gumbi za kontroler...) "
        android:inputType="textMultiLine"
        android:maxLength="44"
        app:layout_constraintBottom_toTopOf="@+id/btn_toBasic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_toBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="NAPREJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>